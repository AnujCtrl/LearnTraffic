{
  "name": "LearnTraffic",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "db:create": "sequelize-cli --options-path .sequelizerc.cjs db:create",
    "db:drop": "sequelize-cli --options-path .sequelizerc.cjs db:drop",
    "db:migrate": "sequelize-cli --options-path .sequelizerc.cjs db:migrate",
    "db:migrate:undo": "sequelize-cli --options-path .sequelizerc.cjs db:migrate:undo",
    "db:seed": "sequelize-cli --options-path .sequelizerc.cjs db:seed:all",
    "db:seed:undo": "sequelize-cli --options-path .sequelizerc.cjs db:seed:undo:all",
    "migration:generate": "sequelize-cli --options-path .sequelizerc.cjs migration:generate --name",
    "seed:generate": "sequelize-cli --options-path .sequelizerc.cjs seed:generate --name"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/sequelize": "^11.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "sequelize-cli": "^6.6.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "@biomejs/biome": "^1.9.4"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@application/(.*)$": "<rootDir>/application/$1",
      "^@domain/(.*)$": "<rootDir>/domain/$1",
      "^@infrastructure/(.*)$": "<rootDir>/infrastructure/$1",
      "^@interfaces/(.*)$": "<rootDir>/interfaces/$1",
      "^@config/(.*)$": "<rootDir>/config/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1"
    }
  }
}
